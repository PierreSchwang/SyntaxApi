<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.syntaxphoenix.syntaxapi</groupId>
	<artifactId>SyntaxApi</artifactId>
	<version>2.1</version>
	<packaging>pom</packaging>

	<name>SyntaxApi</name>
	<description>A Java Library to make some things easier and provide helpful tools</description>
	<url>https://gitlab.com/SyntaxPhoenix</url>

	<licenses>
		<license>
			<name>MIT License</name>
			<url>https://gitlab.com/SyntaxPhoenix/syntax-api/-/raw/master/LICENSE</url>
		</license>
	</licenses>

	<developers>
		<developer>
			<name>Laura Endre√ü</name>
			<email>laura.endress@syntaxphoenix.com</email>
			<organization>SyntaxPhoenix IT-Solutions</organization>
			<organizationUrl>https://syntaxphoenix.com/</organizationUrl>
		</developer>
	</developers>

	<scm>
		<connection>scm:git:git://gitlab.com/SyntaxPhoenix/syntax-api.git</connection>
		<developerConnection>scm:git:git@gitlab.com:SyntaxPhoenix/syntax-api.git</developerConnection>
		<url>https://gitlab.com/SyntaxPhoenix/syntax-api/</url>
	</scm>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
	</properties>

	<distributionManagement>
		<snapshotRepository>
			<id>ossrh</id>
			<url>https://oss.sonatype.org/content/repositories/snapshots</url>
		</snapshotRepository>
		<repository>
			<id>ossrh</id>
			<url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
		</repository>
	</distributionManagement>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-gpg-plugin</artifactId>
				<version>1.5</version>
				<executions>
					<execution>
						<id>sign-artifacts</id>
						<phase>verify</phase>
						<goals>
							<goal>sign</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<modules>
		<module>net</module>
		<module>command</module>
		<module>reflection</module>
		<module>utils</module>
		<module>random</module>
		<module>exception</module>
		<module>logging</module>
		<module>event</module>
		<module>service</module>
		<module>nbt</module>
		<module>thread</module>
		<module>version</module>
		<module>config</module>
		<module>data</module>
		<module>test</module>
	</modules>

</project>
